<div>
  <div class="aspect-[280/200] bg-zinc-100 rounded-xl overflow-hidden flex items-center justify-center">
    <%= render_svg(illustration.svg, width: "70%", height: "70%", class: "object-cover", alt: display_name(illustration)) %>
  </div>
  <div>
    <div class="inline-flex items-center justify-between w-full px-4">
      <div>
        <h2
          class="text-base font-semibold text-black dark:text-white mt-8 relative"
        >
          <%= display_name(illustration) %>
        </h2>
        <p
          class="relative z-10 mt-2 text-sm text-zinc-500 dark:text-zinc-400"
        >
          <%= display_tags(illustration) %>
        </p>
      </div>
      <div class="mt-4 hidden">
        <a
          class="group inline-flex items-center justify-center rounded-lg py-2 px-4 text-sm font-semibold focus:outline-none focus-visible:outline-2 focus-visible:outline-offset-2 bg-zinc-900 text-white hover:bg-zinc-700 hover:text-zinc-100 active:bg-zinc-800 active:text-zinc-300 focus-visible:outline-zinc-900 dark:bg-white dark:text-black"
          href="#">...</a
