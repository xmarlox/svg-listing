<div class="p-6 mt-6">
  <div class="mb-4">
    <h1
      class="text-black dark:text-white text-2xl md:text-4xl lg:text-6xl xl:text-8xl font-bold tracking-tighter"
    >
      Search
    </h1>
  </div>
  <%= form_with url: illustrations_path, method: :get, local: true do |form| %>
    <%= form.search_field :q, required: true, placeholder: "Hit enter key to search", class: "w-1/2 p-3 text-white dark:text-black bg-black dark:bg-white text-md md:text-lg lg:text-xl xl:text-2xl tracking-tighter rounded-xl" %>
  <% end %>
</div>
